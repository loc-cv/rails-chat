<div class="flex items-end gap-2 self-start message-box-<%= message.user.id %> max-w-[40%]">
  <div class="avatar-<%= message.user.id %> min-w-[25px]">
    <%= image_tag message.user.chat_avatar, class: "rounded-full" %>
  </div>

  <div class="break-words bg-white p-4 rounded-xl message-<%= message.user.id %>"}>
    <% unless message.room.is_private? %>
      <p class="text-sm font-semibold text-gray-600 mb-2">
        <%= message.user.name %>
      </p>
    <% end %>
    <p class="text-gray-800 font-medium">
      <%= message.body %>
    </p>
  </div>
</div>
